pipeline {
	agent any

	stages {
		stage('Checkout') {
			steps {
				git 'https://github.com/Tiberiu18/log-parser-forwarder-jenkins-rebuild.git'
			}
		}			
		
		stage('Build containers') {
			steps {
				sh 'docker-compose build'
			}
		}

		stage('Start services') {
			steps {
				sh 'docker-compose up -d'
			}
		}

		stage('Test API') {
			steps {
				sh 'sleep 5 && curl -s http://log-receiver-api:3000/health'
			}
		}

		stage('Teardown') {
			steps {
				sh 'docker-compose down'
			}
		}
}
